<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="popup_window_style">
        <item name="android:windowEnterAnimation">@anim/anim_popup_show</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_hide</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <style name="splash_activity" parent="AppTheme">
        <item name="android:background">@drawable/bg_splash</item>
    </style>

</resources>
