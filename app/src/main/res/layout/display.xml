<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/tvDisplayCurrentTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Title"
            android:textSize="25sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/display_cover_width"
        android:layout_weight="9"
        android:transitionName="cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDisplayTimeElapsed"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="right"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/black"/>

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="15dip"
            android:layout_weight="6"
            android:layout_gravity="center_horizontal|center_vertical"
            style="?android:attr/progressBarStyleHorizontal"
            android:maxHeight="6dip"
            android:minHeight="6dip"
            android:progressDrawable="@drawable/progress_style"
            android:thumbOffset="0dip"
            android:thumb="@mipmap/thumb"
            android:indeterminate="false"
            android:transitionName="seek_bar"
            android:splitTrack="false"/>

        <TextView
            android:id="@+id/tvDisplayDuration"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/black"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.5"
        android:background="#EDEDED"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyIvMode">

            <ImageView
                android:id="@+id/ivMode"
                android:layout_width="45dp"
                android:layout_height="33dp"
                android:background="@mipmap/mode_sequence"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayPrevious">

            <Button
                android:id="@+id/btnDisplayPrevious"
                android:layout_width="@dimen/action_button_width"
                android:layout_height="@dimen/action_button_height"
                android:layout_gravity="center"
                android:background="@mipmap/previous"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayState">

            <Button
                android:id="@+id/btnDisplayState"
                android:layout_width="37dip"
                android:layout_height="44dip"
                android:layout_gravity="center"
                android:background="@mipmap/run"
                android:transitionName="btn_state"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayNext">

            <Button
                android:id="@+id/btnDisplayNext"
                android:layout_width="@dimen/action_button_width"
                android:layout_height="@dimen/action_button_height"
                android:layout_gravity="center"
                android:background="@mipmap/next"
                android:transitionName="btn_next"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>