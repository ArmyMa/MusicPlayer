<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/tvDisplayCurrentTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Title"
            android:textSize="25sp"
            android:background="#FF85FC74"/>

    </LinearLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDisplayTimeElapsed"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:text="00:00" />

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="15dip"
            android:layout_weight="6"
            android:layout_gravity="center_horizontal|center_vertical"
            style="?android:attr/progressBarStyleHorizontal"
            android:maxHeight="15dip"
            android:minHeight="15dip"
            android:progressDrawable="@drawable/progress_style"
            android:thumbOffset="0dip"
            android:thumb="@mipmap/seekbar_thumb"
            android:indeterminate="false" />

        <TextView
            android:id="@+id/tvDisplayDuration"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:text="00:00" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.5"
        android:background="#EDEDED"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyIvMode">

            <ImageView
                android:id="@+id/ivMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/mode_sequence"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayPrevious">

            <Button
                android:id="@+id/btnDisplayPrevious"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_gravity="center"
                android:background="@mipmap/previous"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayState">

            <Button
                android:id="@+id/btnDisplayState"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_gravity="center"
                android:background="@mipmap/run"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lyBtnDisplayNext">

            <Button
                android:id="@+id/btnDisplayNext"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_gravity="center"
                android:background="@mipmap/next"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>